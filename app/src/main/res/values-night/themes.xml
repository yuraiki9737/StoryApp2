<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StoryAppSubMission1IntermediateAndroid" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_dark</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/green_dark</item>
        <item name="android:colorBackground">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_dark</item>
        <item name="colorSecondaryVariant">@color/green_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Theme.login" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/accents_50</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/accents_50</item>
        <item name="android:colorBackground">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_dark</item>
        <item name="colorSecondaryVariant">@color/green_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>



    <style name="TextHeader">
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextTittle">
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextContent">
        <item name="android:textColor">@color/white</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:textSize">20sp</item>

    </style>

    <style name="TextContent.Small">
        <item name="android:textColor">@color/white</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:textSize">15sp</item>

    </style>

    <style name="TextContent.Small.Grey">
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/grey_light</item>
    </style>

    <style name="TextContent.registration">
        <item name="android:textColor">@color/accents_50</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:textSize">15sp</item>

    </style>
    <style name="ButtonPrimary">

        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/rounded</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="ButtonSecondary">

        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/stroke</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="ButtonLogoutPrimary">

        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/rounded</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="ButtonLogoutSecondary">

        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/stroke</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>

    </style>



    <style name="card">
        <item name="cardBackgroundColor">@color/black</item>
    </style>

    <style name="tab">
        <item name="tabBackground">@color/black</item>
    </style>

    <style name="cardView">
        <item name="cardBackgroundColor">@color/black_light</item>
    </style>

    <style name="frame">
        <item name="android:background">@color/black</item>
